<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ renderData.title or title or metadata.title }}</title>
  <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
  <link rel="stylesheet" href="https://necolas.github.io/normalize.css/8.0.1/normalize.css">
  <script src="https://kit.fontawesome.com/5d37bf0850.js"></script>
<link href="https://fonts.googleapis.com/css?family=Cabin&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
  <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
  <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">

</head>

<body>

<div class="wrapper">



<article class="head-wrapper">
  <header>
    <ul class="nav">
      <li class="logo">
        <a class="home" href="{{ '/' | url }}">{{ metadata.title }}
          <!-- <br> -->
          <!-- User Experience Designer -->
        </a>
      </li>

<!--
      <br>
-->

      {%- for nav in collections.nav -%}
      <li class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}"><a
          href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
      {%- endfor -%}
    </ul>
  </header>
</article>

<br>
  
  <main {% if templateClass %} class="{{ templateClass }}" {% endif %}>

    {{ content | safe }}
  </main>

<div class="push"></div>

  <article class="footer-wrapper">
    <footer>
      <p>&copy; 2019 Matt O'Leary</p>
    </footer>
  </article>

</div><!-- .wrapper-->
  <!-- Current page: {{ page.url | url }} -->


</body>

</html>
